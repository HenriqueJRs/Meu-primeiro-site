// javascript


const voos = [
  { destino: "SÃ£o Paulo", horario: "12:30", status: "Confirmado" },
  { destino: "Rio de Janeiro", horario: "13:15", status: "Atrasado" },
  { destino: "BrasÃ­lia", horario: "14:00", status: "No horÃ¡rio" }
];

const container = document.getElementById("voos");
voos.forEach(voo => {
  const div = document.createElement("div");
  div.innerHTML = `<strong>${voo.destino}</strong> - ${voo.horario} - <em>${voo.status}</em>`;
  container.appendChild(div);
});


document.getElementById("form-contato").addEventListener("submit", function(e) {
  e.preventDefault();
  document.getElementById("mensagem-sucesso").style.display = "block";
  setTimeout(() => {
    document.getElementById("mensagem-sucesso").style.display = "none";
    document.getElementById("form-contato").reset();
  }, 3000);
});
